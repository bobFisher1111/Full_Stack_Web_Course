<%-include("partials/header")-%>

<h1>Home</h1>
<p><%=startingContent%></p>

<!-- Using ForEach loop, to loop through the array of titles -->
<%posts.forEach((post)=>{%>
    <h1><%=post.title%></h1>
    <!-- Adding substring of content 100 characters to give content just a preview-->
    <p>
        <%=post.content.substring(0,100) + " ..."%>
        <a href="/posts/<%=post.title%>">Read More</a>
    </p>
    
<%});%>  

<%-include("partials/footer")-%>